<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.craig.bobscout.ScoutMatchSetup"
    tools:layout_editor_absoluteY="89dp">

    <EditText
        android:id="@+id/matchNumBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Match Number"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/teamNumBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Team Number"
        android:inputType="number"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/matchNumBox"
        app:layout_constraintTop_toBottomOf="@+id/matchNumBox" />

    <Button
        android:id="@+id/scoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_marginStart="24dp"
        android:onClick="submit"
        android:text="Scout"
        app:layout_constraintBottom_toBottomOf="@+id/teamNumBox"
        app:layout_constraintStart_toEndOf="@+id/matchNumBox" />

</android.support.constraint.ConstraintLayout>
